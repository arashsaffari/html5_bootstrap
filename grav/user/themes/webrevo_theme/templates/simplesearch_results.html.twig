{% extends 'partials/simplesearch_base.html.twig' %}

{% block content %}
    <div class="container-fluid pl-lg-30 pr-lg-30 mt-50">
        <div class="row">
            <div class="col-12">
                <div class="content-padding simplesearch">

                    <div class="boxshadow_1 my-10 mt-30 p-10 pt-40 pb-30">
                        <h1 class="h4 text-center text-uppercase">{{"PLUGIN_SIMPLESEARCH.SEARCH_RESULTS"|t}}</h1>
                        {% include 'partials/simplesearch_searchbox.html.twig' %}
                        <p class="text-center mt-20">
                            {% if query %}
                                {% set count = search_results ? search_results.count : 0 %}
                                {% if count == 1 %}
                                    {{ "PLUGIN_SIMPLESEARCH.SEARCH_RESULTS_SUMMARY_SINGULAR"|t(query|e)|raw }}
                                {% else %}
                                    {{ "PLUGIN_SIMPLESEARCH.SEARCH_RESULTS_SUMMARY_PLURAL"|t(query|e, count)|raw }}
                                {% endif %}
                            {% endif %}
                        </p>
                    </div>

                    
                        {% if search_results|length > 0 %}
                            <div class="boxshadow_1 my-10 mt-30 px-20 pt-20 pb-30 mb-100">
                                {% for page in search_results %}
                                    {% include 'partials/simplesearch_item.html.twig' with {'page':page} %}
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="boxshadow_1 my-10 mt-30 px-20 py-150 mb-100">
                            </div>
                        {% endif %}
                    

                </div>
            </div>
        </div>
    </div>
{% endblock %}
